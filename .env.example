# Database Configuration
# Host where the PostgreSQL database is running
POSTGRES_HOST=localhost

# Port where PostgreSQL is listening
POSTGRES_PORT=5432

# PostgreSQL username
POSTGRES_USER=your_username

# PostgreSQL password
POSTGRES_PASSWORD=your_password

# Name of the database to use
POSTGRES_DB=your_database_name

# Security Configuration
# Secret key for JWT token generation and validation
JWT_SECRET=your_jwt_secret_key

# Application Configuration
# Port where the NestJS application will run
PORT=3002

# Rate Limiting Configuration
# Time window in seconds for rate limiting (default: 60)
THROTTLE_TTL=60

# Maximum number of requests allowed within the TTL window (default: 100)
THROTTLE_LIMIT=100

# CORS Configuration (Optional)
# Allowed origins for CORS (comma-separated), default is '*'
# CORS_ORIGIN=http://localhost:3000
